generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Guest {
  id           String    @id @default(uuid()) @db.Uuid
  sessionToken String    @unique
  createdAt    DateTime  @default(now())
  expiresAt    DateTime
  resumes      Resume[]
}

model User {
  id           String    @id @default(uuid()) @db.Uuid
  createdAt    DateTime  @default(now())
  expiresAt    DateTime
  email        String?   @unique
  name         String?
  image        String?

  resumes      Resume[]
}

model Resume {
  id            String         @id @default(uuid()) @db.Uuid
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  // Ownership (guest OR user)
  guestId       String?        @db.Uuid
  guest         Guest?         @relation(fields: [guestId], references: [id])

  userId        String?        @db.Uuid
  user          User?          @relation(fields: [userId], references: [id])

  // Personal Information
  firstName     String?
  lastName      String?
  email         String?
  phone         String?
  address       String?
  city          String?
  postalCode    String?
  dateOfBirth   String?
  nationality   String?
  maritalStatus String?
  about         String?
  jobTitle      String?

  // Resume Settings
  template      String
  accentColor   String
  fontFamily    String
  hobbies       String?

  // Relations (lists)
  experiences   Experience[]
  educations    Education[]
  skills        Skill[]
  languages     Language[]
  socialLinks   SocialLink[]
}

model Experience {
  id          String   @id @default(uuid()) @db.Uuid
  resumeId    String   @db.Uuid
  resume      Resume   @relation(fields: [resumeId], references: [id])

  jobTitle    String?
  company     String?
  startDate   String?
  endDate     String?
  current     Boolean  @default(false)
  city        String?
  description String?
}

model Education {
  id             String   @id @default(uuid()) @db.Uuid
  resumeId       String   @db.Uuid
  resume         Resume   @relation(fields: [resumeId], references: [id])

  school         String?
  degree         String?
  graduationDate String?
  city           String?
}

model Skill {
  id              String   @id @default(uuid()) @db.Uuid
  resumeId        String   @db.Uuid
  resume          Resume   @relation(fields: [resumeId], references: [id])

  skillName       String?
  level           String?
  description     String?
}

model Language {
  id       String   @id @default(uuid()) @db.Uuid
  resumeId String   @db.Uuid
  resume   Resume   @relation(fields: [resumeId], references: [id])

  name     String?
  level    String?
}

model SocialLink {
  id       String   @id @default(uuid()) @db.Uuid
  resumeId String   @db.Uuid
  resume   Resume   @relation(fields: [resumeId], references: [id])

  label    String?
  url      String?
}




generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Auth Schema
model Guest {
  id           String @id @default(uuid()) @db.Uuid
  sessionToken String @unique

  createdAt DateTime @default(now())
  expiresAt DateTime

  resumes Resume[]
}

model User {
  id            String   @id @default(uuid()) @db.Uuid
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now()) @updatedAt
  email         String?  @unique
  emailVerified Boolean  @default(false)
  name          String?
  image         String?

  sessions Session[]
  accounts Account[]
  resumes  Resume[]

  @@map("user")
}

model Session {
  id        String   @id @default(uuid()) @db.Uuid
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String   @db.Uuid

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id @default(uuid()) @db.Uuid
  accountId             String
  providerId            String
  userId                String    @db.Uuid
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id @default(uuid()) @db.Uuid
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

model Subscription {
  id               String    @id @default(uuid()) @db.Uuid
  userId           String    @unique
  polarCustomerId  String?
  polarSubId       String?   @unique
  status           String
  currentPeriodEnd DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Resume Schema
model Resume {
  id        String   @id @default(uuid()) @db.Uuid
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Ownership (guest OR user)
  guestId String? @db.Uuid
  guest   Guest?  @relation(fields: [guestId], references: [id])

  userId String? @db.Uuid
  user   User?   @relation(fields: [userId], references: [id])

  // Personal Information
  title         String?
  firstName     String?
  lastName      String?
  email         String?
  phone         String?
  address       String?
  city          String?
  postalCode    String?
  dateOfBirth   String?
  nationality   String?
  maritalStatus String?
  about         String?
  jobTitle      String?

  // Resume Settings
  template          String
  accentColor       String
  fontFamily        String
  hobbies           String?
  showSkillMeter    Boolean @default(true)
  showLanguageMeter Boolean @default(true)

  // Relations (lists)
  experiences Experience[]
  educations  Education[]
  skills      Skill[]
  languages   Language[]
  socialLinks SocialLink[]
}

model Experience {
  id       String @id @default(uuid()) @db.Uuid
  resumeId String @db.Uuid
  resume   Resume @relation(fields: [resumeId], references: [id], onDelete: Cascade)

  jobTitle    String?
  company     String?
  startDate   String?
  endDate     String?
  current     Boolean @default(false)
  city        String?
  description String?
}

model Education {
  id       String @id @default(uuid()) @db.Uuid
  resumeId String @db.Uuid
  resume   Resume @relation(fields: [resumeId], references: [id], onDelete: Cascade)

  school         String?
  degree         String?
  graduationDate String?
  city           String?
  description    String?
}

model Skill {
  id       String @id @default(uuid()) @db.Uuid
  resumeId String @db.Uuid
  resume   Resume @relation(fields: [resumeId], references: [id], onDelete: Cascade)

  skillName   String?
  level       String?
  description String?
}

model Language {
  id       String @id @default(uuid()) @db.Uuid
  resumeId String @db.Uuid
  resume   Resume @relation(fields: [resumeId], references: [id], onDelete: Cascade)

  name  String?
  level String?
}

model SocialLink {
  id       String @id @default(uuid()) @db.Uuid
  resumeId String @db.Uuid
  resume   Resume @relation(fields: [resumeId], references: [id], onDelete: Cascade)

  label String?
  url   String?
}
